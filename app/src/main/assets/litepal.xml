    <list>
        <!--包含当前好友信息的数据表-->
        <mapping class="priv.zxy.moonstep.framework.user.User"></mapping>
        <!--消息存储的数据表-->
        <mapping class="priv.zxy.moonstep.framework.message.Message"></mapping>
        <!--宠物信息表-->
        <mapping class="priv.zxy.moonstep.framework.pet.Pet"></mapping>
        <!--地图宝藏坐标点-->
        <mapping class="priv.zxy.moonstep.algorithm.ChooseMapDots.MapDot"></mapping>
    </list>
</litepal>