<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/scopeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/pack_background"
            android:elevation="10dp"
            android:contentDescription="@string/nothing" />
    </android.support.constraint.ConstraintLayout>

    <GridView
        android:id="@+id/GridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:numColumns="5"
        android:background="@drawable/background2"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/scopeHeader"
        app:layout_constraintBottom_toTopOf="@+id/fg_bottom"/>

    <LinearLayout
        android:id="@+id/fg_bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background">
        <ImageView
            android:id="@+id/bt_auction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/moon_auction_house_bg"
            tools:ignore="ImageViewStyle" />
        <ImageView
            android:id="@+id/bt_mall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/moon_mall_bg"
            tools:ignore="ImageViewStyle" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>