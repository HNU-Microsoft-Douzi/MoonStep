<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_album"
        android:gravity="center"
        android:padding="15dp"
        android:text="相册"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/whiteLine"/>

    <View
        android:id="@+id/whiteLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a7a7a7"
        app:layout_constraintBottom_toTopOf="@id/tv_camera"/>

    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_camera"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        android:text="拍照"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_cancel" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:background="@drawable/shape_cancel"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/picture_cancel"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>