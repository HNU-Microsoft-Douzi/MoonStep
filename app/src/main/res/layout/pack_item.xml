<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_columnWeight="1"
    android:layout_margin="1dp"
    android:layout_rowWeight="1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/itemBackground"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/package_item"/>

    <ImageView
        android:id="@+id/itemSrc"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="@id/itemBackground"
        app:layout_constraintLeft_toLeftOf="@id/itemBackground"
        app:layout_constraintRight_toRightOf="@id/itemBackground"
        app:layout_constraintBottom_toBottomOf="@id/itemBackground"/>

    <TextView
        android:id="@+id/itemNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_margin="5dp"
        android:background="@color/Black"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="@+id/itemSrc"
        app:layout_constraintBottom_toBottomOf="@id/itemSrc"/>

</android.support.constraint.ConstraintLayout>