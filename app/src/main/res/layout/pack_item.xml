<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_columnWeight="1"
    android:layout_margin="1dp"
    android:layout_rowWeight="1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/itemBackground"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/package_item"/>

    <ImageView
        android:id="@+id/itemSrc"
        android:layout_width="58dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="@id/itemBackground"
        app:layout_constraintLeft_toLeftOf="@id/itemBackground"
        app:layout_constraintRight_toRightOf="@id/itemBackground"
        app:layout_constraintBottom_toBottomOf="@id/itemBackground"/>

    <TextView
        android:id="@+id/itemNumber"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:text="3"
        android:gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/pack_item_dot_background"
        android:textColor="@color/white"
        android:fontFamily="@font/fontfamily1"
        app:layout_constraintRight_toRightOf="@+id/itemSrc"
        app:layout_constraintBottom_toBottomOf="@id/itemSrc"/>

</android.support.constraint.ConstraintLayout>