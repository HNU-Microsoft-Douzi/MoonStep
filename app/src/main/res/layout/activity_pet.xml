<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/commerce_background2">
    <ImageView
        android:id="@+id/petImage"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:foreground="@drawable/border1"
        android:background="@color/Black"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/propertyFaceIV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background3"
        app:layout_constraintTop_toBottomOf="@id/petImage"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/fieldGuide"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:src="@drawable/ui4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt1"
        app:layout_constraintRight_toRightOf="parent"
        android:text="喂食"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/fontfamily3"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt1"
        app:layout_constraintRight_toRightOf="parent"
        android:text="喂食"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/fontfamily3"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/bt1"/>

    <Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt1"
        app:layout_constraintRight_toRightOf="parent"
        android:text="喂食"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/fontfamily3"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/bt2"/>

    <Button
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt1"
        app:layout_constraintRight_toRightOf="parent"
        android:text="喂食"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/fontfamily3"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/bt3"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:src="@drawable/number_background"
        app:layout_constraintBottom_toBottomOf="@+id/petImage"
        app:layout_constraintLeft_toRightOf="@+id/tv1" />

    <ImageView
        android:id="@+id/diamond1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ui2"
        app:layout_constraintBottom_toBottomOf="@id/petImage"
        app:layout_constraintLeft_toRightOf="@+id/uiIV1"/>

    <ImageView
        android:id="@+id/diamond2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ui2"
        app:layout_constraintBottom_toBottomOf="@id/petImage"
        app:layout_constraintLeft_toRightOf="@+id/diamond1"/>

    <ImageView
        android:id="@+id/diamond3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ui2"
        app:layout_constraintBottom_toBottomOf="@id/petImage"
        app:layout_constraintLeft_toRightOf="@+id/diamond2"/>

    <ImageView
        android:id="@+id/diamond4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ui2"
        app:layout_constraintBottom_toBottomOf="@id/petImage"
        app:layout_constraintLeft_toRightOf="@+id/diamond3"/>

    <ImageView
        android:id="@+id/uiIV1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ui1"
        app:layout_constraintBottom_toBottomOf="@id/petImage"
        app:layout_constraintHorizontal_bias="0.600"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/uiIV2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/maturity"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="@id/petImage"
        app:layout_constraintHorizontal_bias="0.630"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="战力:"
        android:textColor="@color/Gold"
        android:textSize="25sp"
        android:translationZ="10dp"
        android:layout_margin="10dp"
        android:fontFamily="@font/fontfamily3"
        app:layout_constraintBottom_toBottomOf="@+id/petImage"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/petCompatAbilityTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1008"
        android:textColor="@color/Gold"
        android:textSize="22sp"
        android:translationZ="10dp"
        android:layout_margin="7dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/petImage"
        app:layout_constraintLeft_toRightOf="@+id/tv1" />

    <TextView
        android:id="@+id/uiIV3"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background4"
        android:fontFamily="@font/fontfamily3"
        android:textColor="#edd9a2"
        android:gravity="center"
        android:textSize="17sp"
        android:paddingBottom="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="增加拥有者20％当前资源， 每日收益增加30%，发掘宝物 概率+30%"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skillTV"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ui3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/uiIV3"/>

    <ImageView
        android:id="@+id/petIntroduceIV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background5"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/uiIV3"
        app:layout_constraintTop_toTopOf="@+id/uiIV3"/>

    <TextView
        android:id="@+id/petIntroduceTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="玲玲珑珑天地间，花开花落一千年。"
        android:textColor="#edb979"
        android:padding="5dp"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/petIntroduceIV"
        app:layout_constraintBottom_toBottomOf="@id/petIntroduceIV"
        app:layout_constraintLeft_toLeftOf="@id/petIntroduceIV"
        app:layout_constraintRight_toRightOf="@id/petIntroduceIV"/>

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="19dp"
        android:layout_gravity="center"
        android:src="@drawable/my_photo"
        app:civ_border_color="#c0c0c0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petImage"/>

    <ImageView
        android:id="@+id/headBackgroundIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ui5"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/petImage" />

    <TextView
        android:id="@+id/levelNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="等阶:"
        android:fontFamily="@font/fontfamily3"
        android:textColor="@color/Gold"
        app:layout_constraintBottom_toTopOf="@+id/petIntroduceIV"
        app:layout_constraintEnd_toEndOf="@+id/headBackgroundIV"
        app:layout_constraintStart_toStartOf="@+id/headBackgroundIV"
        app:layout_constraintTop_toTopOf="@+id/headBackgroundIV" />

    <TextView
        android:id="@+id/levelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三阶"
        android:textColor="@color/Gold"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/fontfamily3"
        app:layout_constraintTop_toTopOf="@+id/levelNameTV"
        app:layout_constraintLeft_toRightOf="@+id/raceNameTV"/>

    <TextView
        android:id="@+id/raceNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="种族:"
        android:textColor="@color/Gold"
        android:fontFamily="@font/fontfamily3"
        app:layout_constraintBottom_toTopOf="@+id/petIntroduceIV"
        app:layout_constraintEnd_toEndOf="@+id/headBackgroundIV"
        app:layout_constraintStart_toStartOf="@+id/headBackgroundIV"
        app:layout_constraintTop_toTopOf="@+id/levelNameTV"/>

    <TextView
        android:id="@+id/raceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月灵种"
        android:textColor="@color/Gold"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/fontfamily3"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/petIntroduceIV"
        app:layout_constraintStart_toEndOf="@id/raceNameTV"
        app:layout_constraintTop_toTopOf="@+id/levelNameTV"/>

    <ImageView
        android:id="@+id/skillBackgroundIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ui6"
        app:layout_constraintTop_toBottomOf="@id/petImage"
        app:layout_constraintRight_toRightOf="@+id/skillTV"
        app:layout_constraintLeft_toLeftOf="@id/skillTV"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/skillTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ui7"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="陨落星空"
        android:textColor="@color/Gold"
        android:fontFamily="@font/fontfamily3"
        app:layout_constraintTop_toBottomOf="@id/skillBackgroundIV"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>