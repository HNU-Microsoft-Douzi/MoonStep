<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:cardBackgroundColor="@color/Black"
        app:cardCornerRadius="13dp"
        app:cardElevation="20dp"
        app:contentPadding="5dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">
            <ImageView
                android:id="@+id/mediaOrImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/ui16"/>

            <ImageView
                android:id="@+id/praise"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/praise"
                app:layout_constraintTop_toBottomOf="@+id/mediaOrImage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.07"/>

            <TextView
                android:id="@+id/praiseNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/fontfamily1"
                android:gravity="center"
                android:text="103"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/praise"
                app:layout_constraintStart_toStartOf="@+id/praise"
                app:layout_constraintTop_toBottomOf="@id/praise" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国湖南省长沙市岳麓书院"
                android:textColor="@color/white"
                android:fontFamily="@font/fontfamily1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/fontfamily1"
                android:text="119.018928"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/address"
                app:layout_constraintEnd_toStartOf="@+id/langtitude" />

            <TextView
                android:id="@+id/langtitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28.1892809"
                android:fontFamily="@font/fontfamily1"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@+id/address"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>