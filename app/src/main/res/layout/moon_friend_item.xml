<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ripple_effect"
    android:layout_height="75dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@color/Black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:hint="昵稱"
        android:layout_marginStart="20dp"
        android:textColor="@color/Black"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/user_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user_gender"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/nothing"
        android:scaleType="fitXY"
        android:src="@mipmap/man_gender"
        app:layout_constraintStart_toEndOf="@+id/user_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/user_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/Gray"
        android:hint="level"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/user_photo"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <TextView
        android:id="@+id/dot1"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:text="·"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/Gray"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintLeft_toRightOf="@+id/user_level"/>

    <TextView
        android:id="@+id/user_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="race"

        android:textColor="@color/Gray"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/dot1"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />
    <TextView
        android:id="@+id/dot2"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:text="·"
        android:gravity="center"
        android:textColor="@color/Gray"
        android:textSize="20sp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintLeft_toRightOf="@+id/user_race"/>

    <TextView
        android:id="@+id/user_isOnLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="不在綫"
        android:textColor="@color/Gray"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/dot2"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />
</android.support.constraint.ConstraintLayout>