<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通地图"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卫星地图"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bt1"/>

    <Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空白地图"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bt2"/>

    <Button
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启交通图"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bt3"/>


    <Button
        android:id="@+id/bt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启热力图"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bt4"/>

    <Button
        android:id="@+id/bt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启室内图"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bt5"/>

    <Button
        android:id="@+id/bt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启自定义地图"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bt6"/>

    <Button
        android:id="@+id/loadCustomMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载自定义地图"
        android:layout_margin="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <TextView
        android:id="@+id/positionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>