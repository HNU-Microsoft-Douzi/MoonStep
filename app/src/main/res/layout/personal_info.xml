<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background6">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ui9"/>

    <ImageView
        android:id="@+id/raceHeadPortrait"
        android:layout_width="190dp"
        android:layout_height="240dp"
        android:src="@drawable/ui8"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:contentDescription="@string/nothing"
        android:translationZ="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/raceIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/Gold"
        android:layout_margin="10dp"
        android:translationZ="10dp"
        app:layout_constraintLeft_toLeftOf="@id/raceHeadPortrait"
        app:layout_constraintTop_toTopOf="@id/raceHeadPortrait"/>

    <TextView
        android:id="@+id/raceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="种族："
        android:fontFamily="@font/fontfamily5"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/raceHeadPortrait"
        app:layout_constraintTop_toTopOf="@id/raceHeadPortrait"/>

    <TextView
        android:id="@+id/raceNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月灵族"
        android:fontFamily="@font/fontfamily5"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginEnd="30dp"
        app:layout_constraintLeft_toRightOf="@id/raceTextView"
        app:layout_constraintTop_toTopOf="@id/raceHeadPortrait"/>

    <TextView
        android:id="@+id/raceDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="种族描述："
        android:fontFamily="@font/fontfamily5"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toRightOf="@+id/raceHeadPortrait"
        app:layout_constraintTop_toBottomOf="@+id/raceNameTV"/>

    <TextView
        android:id="@+id/raceDescriptionTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontfamily5"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="月徒学富五车，顿悟天地月华，阶成月师，可授他人礼。"
        app:layout_constraintTop_toBottomOf="@+id/raceDescriptionTextView"
        app:layout_constraintLeft_toRightOf="@+id/raceHeadPortrait"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/cardViewBackground1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:contentDescription="@string/nothing"
        android:background="@drawable/ui10"
        app:layout_constraintTop_toBottomOf="@+id/raceHeadPortrait"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/levelName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:ems="1"
        android:text="大月师"
        android:fontFamily="@font/fontfamily4"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/cardViewBackground1"
        app:layout_constraintBottom_toBottomOf="@id/cardViewBackground1"
        app:layout_constraintLeft_toLeftOf="@+id/cardViewBackground1"/>

    <TextView
        android:id="@+id/levelDiscription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="我不知道该怎么说，只是我好想你啊!"
        android:fontFamily="@font/fontfamily4"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/cardViewBackground1"
        app:layout_constraintBottom_toBottomOf="@id/cardViewBackground1"
        app:layout_constraintLeft_toRightOf="@id/levelName"
        app:layout_constraintRight_toRightOf="@id/cardViewBackground1"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/luckyIconIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/Black"/>

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/userSignature"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/ui10"
            android:layout_margin="20dp"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/cardViewBackground1"
            android:fontFamily="@font/fontfamily4"
            android:textSize="18sp"
            android:gravity="center"
            android:text="我想踏碎这山河，走上星空，变强的意义，不是为了活上千年，只是为了等你回来。"/>

</android.support.constraint.ConstraintLayout>